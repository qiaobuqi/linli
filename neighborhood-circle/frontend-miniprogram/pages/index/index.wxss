/* 主容器 */
.container {
  padding-bottom: 120rpx;
  background: linear-gradient(to bottom, #f5f7fa 0%, #ffffff 100%);
  min-height: 100vh;
}

/* ========== 顶部栏 ========== */
.top-bar {
  background: #ffffff;
  padding: 20rpx 32rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

.location-section {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.location-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.location-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  flex: 1;
}

.location-arrow {
  font-size: 36rpx;
  color: #999;
}

.search-box {
  background: #f5f7fa;
  border-radius: 48rpx;
  padding: 20rpx 32rpx;
  display: flex;
  align-items: center;
}

.search-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.search-placeholder {
  font-size: 28rpx;
  color: #999;
}

/* ========== 轮播Banner ========== */
.banner-section {
  padding: 24rpx 32rpx;
}

.banner-swiper {
  height: 280rpx;
  border-radius: 24rpx;
  overflow: hidden;
}

.banner-item {
  height: 280rpx;
  border-radius: 24rpx;
  padding: 48rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  position: relative;
  overflow: hidden;
}

.banner-pet {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.banner-carpool {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.banner-secondhand {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.banner-content {
  display: flex;
  flex-direction: column;
  z-index: 2;
}

.banner-title {
  font-size: 44rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 12rpx;
}

.banner-subtitle {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.banner-emoji {
  font-size: 120rpx;
  opacity: 0.3;
  position: absolute;
  right: 40rpx;
  top: 50%;
  transform: translateY(-50%);
}

/* ========== 服务分类 ========== */
.category-section {
  padding: 24rpx 32rpx;
  background: #ffffff;
  margin: 24rpx 0;
}

.category-grid {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.category-item {
  width: 23%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 32rpx;
}

.category-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s;
}

.category-express { background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); }
.category-pet { background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%); }
.category-carpool { background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%); }
.category-secondhand { background: linear-gradient(135deg, #43e97b 0%, #38f9d7 100%); }
.category-repair { background: linear-gradient(135deg, #fa709a 0%, #fee140 100%); }
.category-cleaning { background: linear-gradient(135deg, #30cfd0 0%, #330867 100%); }
.category-food { background: linear-gradient(135deg, #ffecd2 0%, #fcb69f 100%); }
.category-other { background: linear-gradient(135deg, #a8edea 0%, #fed6e3 100%); }

.icon-emoji {
  font-size: 48rpx;
}

.category-name {
  font-size: 24rpx;
  color: #333;
  margin-bottom: 4rpx;
  font-weight: 500;
}

.category-count {
  font-size: 20rpx;
  color: #999;
}

/* ========== 热门标签 ========== */
.hot-tags-section {
  padding: 24rpx 32rpx;
}

.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  flex: 1;
}

.section-more {
  font-size: 26rpx;
  color: #999;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.tag-item {
  background: #f5f7fa;
  border-radius: 32rpx;
  padding: 12rpx 24rpx;
  font-size: 24rpx;
  color: #666;
  border: 1rpx solid #e5e7eb;
}

/* ========== 任务列表 ========== */
.tasks-section {
  padding: 24rpx 32rpx;
}

.task-list {
  margin-top: 16rpx;
}

.task-card {
  background: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.06);
  position: relative;
  overflow: hidden;
  transition: all 0.3s;
}

.task-card::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 8rpx;
  height: 100%;
  background: linear-gradient(to bottom, #FF6B35, #F7931E);
}

.task-tag {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 20rpx;
  border-radius: 32rpx;
  font-size: 22rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.task-tag-express { background: #e0f2fe; color: #0284c7; }
.task-tag-pet { background: #fce7f3; color: #be185d; }
.task-tag-carpool { background: #dbeafe; color: #1d4ed8; }
.task-tag-secondhand { background: #d1fae5; color: #059669; }
.task-tag-repair { background: #fed7aa; color: #c2410c; }
.task-tag-cleaning { background: #e0e7ff; color: #4f46e5; }
.task-tag-food { background: #fef3c7; color: #d97706; }
.task-tag-other { background: #f3f4f6; color: #6b7280; }

.tag-emoji {
  margin-right: 6rpx;
  font-size: 24rpx;
}

.tag-text {
  font-size: 22rpx;
}

.task-main {
  margin-left: 8rpx;
}

.task-title-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.task-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  flex: 1;
  line-height: 1.4;
}

.urgent-badge {
  background: #ff4d4f;
  color: #ffffff;
  font-size: 20rpx;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-weight: bold;
  margin-left: 12rpx;
}

.task-desc {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 20rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.task-creator {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding: 16rpx;
  background: #f9fafb;
  border-radius: 16rpx;
}

.creator-avatar {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  border: 2rpx solid #ffffff;
}

.creator-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  flex: 1;
}

.creator-level {
  display: flex;
  align-items: center;
  background: #fff7ed;
  padding: 6rpx 16rpx;
  border-radius: 24rpx;
}

.level-icon {
  font-size: 20rpx;
  margin-right: 4rpx;
}

.level-text {
  font-size: 22rpx;
  color: #f59e0b;
  font-weight: 600;
}

.task-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.task-info {
  display: flex;
  align-items: center;
  font-size: 24rpx;
  color: #999;
}

.info-item {
  display: inline-flex;
  align-items: center;
}

.info-separator {
  margin: 0 12rpx;
  color: #ddd;
}

.task-price-box {
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 28rpx;
  color: #FF6B35;
  font-weight: 600;
  margin-right: 4rpx;
}

.price-amount {
  font-size: 40rpx;
  color: #FF6B35;
  font-weight: bold;
}

/* ========== 加载状态 ========== */
.loading-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #FF6B35;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #999;
}

/* ========== 空状态 ========== */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 120rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: 24rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 32rpx;
  color: #666;
  margin-bottom: 12rpx;
}

.empty-hint {
  font-size: 26rpx;
  color: #999;
}

/* ========== 悬浮按钮 ========== */
.floating-btn {
  position: fixed;
  bottom: 100rpx;
  right: 40rpx;
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #FF6B35 0%, #F7931E 100%);
  border-radius: 60rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 53, 0.4);
  z-index: 100;
}

.fab-icon {
  font-size: 48rpx;
  color: #ffffff;
  font-weight: 300;
  margin-bottom: 4rpx;
}

.fab-text {
  font-size: 20rpx;
  color: #ffffff;
  font-weight: 500;
}