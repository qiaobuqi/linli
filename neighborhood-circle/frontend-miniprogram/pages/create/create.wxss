/* 主容器 */
.container {
  background: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 40rpx;
}

/* ========== 顶部提示 ========== */
.tips-banner {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 32rpx;
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.tips-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.tips-text {
  font-size: 28rpx;
  color: #ffffff;
  font-weight: 500;
}

/* ========== 表单区块 ========== */
.form-section {
  background: #ffffff;
  margin-bottom: 24rpx;
  padding: 32rpx;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
  padding-bottom: 16rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.title-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.title-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #1a1a1a;
  flex: 1;
}

.required {
  color: #ff4d4f;
  font-size: 32rpx;
  margin-left: 8rpx;
}

/* ========== 服务类型网格 ========== */
.type-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 20rpx;
}

.type-item {
  width: calc(25% - 15rpx);
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 24rpx 8rpx;
  border-radius: 16rpx;
  background: #f5f7fa;
  border: 2rpx solid transparent;
  transition: all 0.3s;
}

.type-active {
  background: #fff4f0;
  border-color: #FF6B35;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.2);
}

.type-emoji {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.type-name {
  font-size: 24rpx;
  color: #333;
  text-align: center;
}

/* ========== 表单项 ========== */
.form-item {
  margin-bottom: 32rpx;
  position: relative;
}

.form-item:last-child {
  margin-bottom: 0;
}

.item-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 16rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
}

.optional {
  color: #999;
  font-size: 24rpx;
  margin-left: 8rpx;
  font-weight: normal;
}

.item-input {
  background: #f5f7fa;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333;
  transition: all 0.3s;
}

.item-input:focus {
  background: #ffffff;
  border-color: #FF6B35;
}

.item-textarea {
  background: #f5f7fa;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 24rpx;
  font-size: 28rpx;
  color: #333;
  min-height: 200rpx;
  width: 100%;
  box-sizing: border-box;
  line-height: 1.6;
}

.char-count {
  position: absolute;
  right: 0;
  bottom: -32rpx;
  font-size: 22rpx;
  color: #999;
}

/* ========== 图片上传 ========== */
.image-upload {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.image-item {
  width: 200rpx;
  height: 200rpx;
  position: relative;
  border-radius: 16rpx;
  overflow: hidden;
}

.uploaded-image {
  width: 100%;
  height: 100%;
}

.delete-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 48rpx;
  height: 48rpx;
  background: rgba(0, 0, 0, 0.6);
  border-radius: 50%;
  color: #ffffff;
  font-size: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  line-height: 1;
}

.upload-btn {
  width: 200rpx;
  height: 200rpx;
  background: #f5f7fa;
  border: 2rpx dashed #d0d0d0;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-icon {
  font-size: 48rpx;
  margin-bottom: 8rpx;
}

.upload-text {
  font-size: 24rpx;
  color: #999;
}

.upload-hint {
  font-size: 22rpx;
  color: #999;
  margin-top: 16rpx;
}

/* ========== 报酬设置 ========== */
.price-options {
  display: flex;
  background: #f5f7fa;
  border-radius: 16rpx;
  padding: 6rpx;
  margin-bottom: 32rpx;
}

.price-quick,
.price-custom {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 12rpx;
  transition: all 0.3s;
}

.price-quick.active,
.price-custom.active {
  background: #ffffff;
  color: #FF6B35;
  font-weight: 600;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.price-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.price-tag {
  flex: 0 0 calc(33.333% - 11rpx);
  padding: 24rpx;
  text-align: center;
  background: #f5f7fa;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  transition: all 0.3s;
}

.price-selected {
  background: #fff4f0;
  border-color: #FF6B35;
  color: #FF6B35;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 53, 0.2);
}

.price-input-box {
  display: flex;
  align-items: center;
  background: #f5f7fa;
  border: 2rpx solid #e5e7eb;
  border-radius: 16rpx;
  padding: 24rpx;
}

.price-symbol {
  font-size: 36rpx;
  color: #FF6B35;
  font-weight: bold;
  margin-right: 12rpx;
}

.price-input {
  flex: 1;
  font-size: 36rpx;
  color: #333;
  font-weight: 600;
}

.price-hint {
  margin-top: 16rpx;
  font-size: 24rpx;
  color: #999;
  display: flex;
  align-items: center;
}

/* ========== 其他设置 ========== */
.setting-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.setting-item:last-child {
  border-bottom: none;
}

.setting-left {
  display: flex;
  align-items: center;
  flex: 1;
}

.setting-icon {
  font-size: 40rpx;
  margin-right: 16rpx;
}

.setting-info {
  display: flex;
  flex-direction: column;
}

.setting-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 6rpx;
}

.setting-desc {
  font-size: 24rpx;
  color: #999;
}

.setting-arrow {
  font-size: 40rpx;
  color: #999;
  margin-left: 16rpx;
}

/* ========== 提交按钮 ========== */
.submit-container {
  padding: 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.btn-submit {
  width: 100%;
  background: linear-gradient(135deg, #FF6B35 0%, #F7931E 100%);
  color: #ffffff;
  border: none;
  border-radius: 48rpx;
  padding: 32rpx;
  font-size: 32rpx;
  font-weight: 600;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 53, 0.3);
  transition: all 0.3s;
}

.btn-submit:active {
  opacity: 0.9;
  transform: scale(0.98);
}

.btn-text {
  letter-spacing: 2rpx;
}

.submit-hint {
  margin-top: 24rpx;
  font-size: 22rpx;
  color: #999;
  text-align: center;
}

/* ========== 底部占位 ========== */
.bottom-space {
  height: 40rpx;
}
