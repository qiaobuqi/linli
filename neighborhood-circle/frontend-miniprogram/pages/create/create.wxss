.container {
  padding: 30rpx;
}

.form-group {
  margin-bottom: 40rpx;
}

.label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.input {
  border: 1px solid #eee;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 30rpx;
}

.textarea {
  border: 1px solid #eee;
  padding: 20rpx;
  border-radius: 8rpx;
  width: 100%;
  height: 200rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}

.btn-submit {
  background-color: #07c160;
  color: #fff;
  margin-top: 60rpx;
}
