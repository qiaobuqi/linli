<view class="container">
  <view class="form-group">
    <view class="label">Task Type</view>
    <picker mode="selector" range="{{types}}" bindchange="handleTypeChange">
      <view class="picker-input">{{type}}</view>
    </picker>
  </view>

  <view class="form-group">
    <view class="label">Title</view>
    <input class="input" placeholder="Task Title" data-field="title" bindinput="handleInput" />
  </view>
  
  <view class="form-group">
    <view class="label">Price (Â¥)</view>
    <input class="input" type="digit" placeholder="0.00" data-field="price" bindinput="handleInput" />
  </view>

  <view class="form-group">
    <view class="label">Description</view>
    <textarea class="textarea" placeholder="Describe your task..." data-field="description" bindinput="handleInput"></textarea>
  </view>

  <button class="btn-submit" bindtap="submitForm">Post Task</button>
</view>
