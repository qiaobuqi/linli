/* 主容器 */
.container {
  background: #f5f7fa;
  min-height: 100vh;
  padding-bottom: 140rpx;
}

/* ========== 状态横幅 ========== */
.status-banner {
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-weight: 600;
}

.status-pending {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.status-claimed {
  background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
}

.status-completed {
  background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
}

.status-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.status-text {
  font-size: 28rpx;
  color: #ffffff;
}

/* ========== 任务头部 ========== */
.task-header {
  background: #ffffff;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.task-type-badge {
  display: inline-flex;
  align-items: center;
  padding: 8rpx 20rpx;
  border-radius: 32rpx;
  font-size: 22rpx;
  font-weight: 500;
  margin-bottom: 20rpx;
}

.badge-express { background: #e0f2fe; color: #0284c7; }
.badge-pet { background: #fce7f3; color: #be185d; }
.badge-carpool { background: #dbeafe; color: #1d4ed8; }
.badge-secondhand { background: #d1fae5; color: #059669; }
.badge-repair { background: #fed7aa; color: #c2410c; }
.badge-cleaning { background: #e0e7ff; color: #4f46e5; }
.badge-food { background: #fef3c7; color: #d97706; }
.badge-other { background: #f3f4f6; color: #6b7280; }

.badge-emoji {
  margin-right: 6rpx;
  font-size: 24rpx;
}

.task-title-section {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.task-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #1a1a1a;
  flex: 1;
  line-height: 1.4;
}

.urgent-tag {
  display: flex;
  align-items: center;
  background: #ff4d4f;
  color: #ffffff;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
  margin-left: 16rpx;
}

.urgent-icon {
  font-size: 24rpx;
  margin-right: 4rpx;
}

.urgent-text {
  font-size: 22rpx;
  font-weight: 600;
}

.task-price-box {
  background: linear-gradient(135deg, #fff4ed 0%, #ffe8d8 100%);
  padding: 24rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.price-label {
  font-size: 26rpx;
  color: #666;
}

.price-value {
  display: flex;
  align-items: baseline;
}

.price-symbol {
  font-size: 32rpx;
  color: #FF6B35;
  font-weight: 600;
  margin-right: 4rpx;
}

.price-amount {
  font-size: 48rpx;
  color: #FF6B35;
  font-weight: bold;
}

/* ========== 任务详情 ========== */
.task-detail {
  background: #ffffff;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.detail-section {
  margin-bottom: 40rpx;
}

.detail-section:last-child {
  margin-bottom: 0;
}

.section-title {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
  padding-bottom: 12rpx;
  border-bottom: 2rpx solid #f0f0f0;
}

.title-icon {
  font-size: 32rpx;
  margin-right: 12rpx;
}

.title-text {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
}

.detail-desc {
  font-size: 28rpx;
  color: #333;
  line-height: 1.8;
  word-wrap: break-word;
}

/* 图片网格 */
.images-grid {
  display: flex;
  flex-wrap: wrap;
  gap: 16rpx;
}

.task-image {
  width: calc(33.333% - 11rpx);
  height: 200rpx;
  border-radius: 12rpx;
}

/* 信息列表 */
.info-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.info-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f9fafb;
  border-radius: 12rpx;
}

.info-label {
  font-size: 26rpx;
  color: #666;
}

.info-value {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
}

/* ========== 发布者卡片 ========== */
.creator-card {
  background: #ffffff;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.creator-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.verify-badge {
  font-size: 22rpx;
  color: #52c41a;
  background: #f6ffed;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  border: 1rpx solid #b7eb8f;
}

.creator-profile {
  display: flex;
  align-items: center;
  margin-top: 24rpx;
  padding: 24rpx;
  background: #f9fafb;
  border-radius: 16rpx;
}

.creator-avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  border: 3rpx solid #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.creator-info {
  flex: 1;
}

.creator-name-row {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.creator-name {
  font-size: 30rpx;
  font-weight: 600;
  color: #1a1a1a;
  margin-right: 16rpx;
}

.creator-level {
  display: flex;
  align-items: center;
  background: #fff7ed;
  padding: 6rpx 16rpx;
  border-radius: 24rpx;
}

.level-icon {
  font-size: 20rpx;
  margin-right: 4rpx;
}

.level-text {
  font-size: 22rpx;
  color: #f59e0b;
  font-weight: 600;
}

.creator-stats {
  font-size: 24rpx;
  color: #666;
}

.stat-item {
  display: inline;
}

.stat-separator {
  margin: 0 8rpx;
  color: #ddd;
}

/* 发布者标签 */
.creator-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
  margin-top: 20rpx;
}

.creator-tag {
  background: #f5f7fa;
  color: #666;
  font-size: 22rpx;
  padding: 8rpx 20rpx;
  border-radius: 24rpx;
  border: 1rpx solid #e5e7eb;
}

/* 联系按钮 */
.creator-actions {
  display: flex;
  gap: 16rpx;
  margin-top: 24rpx;
}

.btn-contact,
.btn-profile {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  border-radius: 16rpx;
  font-size: 28rpx;
  border: none;
}

.btn-contact {
  background: linear-gradient(135deg, #FF6B35 0%, #F7931E 100%);
  color: #ffffff;
}

.btn-profile {
  background: #f5f7fa;
  color: #333;
}

.btn-icon {
  margin-right: 8rpx;
  font-size: 32rpx;
}

.btn-text {
  font-weight: 500;
}

/* ========== 评价区域 ========== */
.reviews-section {
  background: #ffffff;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.review-list {
  margin-top: 24rpx;
}

.review-item {
  padding: 24rpx;
  background: #f9fafb;
  border-radius: 16rpx;
  margin-bottom: 16rpx;
}

.review-header {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.reviewer-avatar {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 16rpx;
}

.reviewer-info {
  flex: 1;
}

.reviewer-name {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 6rpx;
  display: block;
}

.review-rating {
  font-size: 20rpx;
}

.star {
  margin-right: 4rpx;
}

.review-time {
  font-size: 22rpx;
  color: #999;
}

.review-content {
  font-size: 26rpx;
  color: #666;
  line-height: 1.6;
}

/* ========== 类似需求 ========== */
.similar-section {
  background: #ffffff;
  padding: 32rpx;
  margin-bottom: 24rpx;
}

.similar-scroll {
  white-space: nowrap;
  margin-top: 20rpx;
}

.similar-item {
  display: inline-block;
  width: 280rpx;
  padding: 24rpx;
  background: #f9fafb;
  border-radius: 16rpx;
  margin-right: 16rpx;
  vertical-align: top;
  white-space: normal;
}

.similar-type {
  font-size: 22rpx;
  color: #FF6B35;
  background: #fff4f0;
  padding: 6rpx 16rpx;
  border-radius: 16rpx;
  display: inline-block;
  margin-bottom: 12rpx;
}

.similar-title {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  display: block;
  margin-bottom: 12rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.similar-price {
  font-size: 28rpx;
  color: #FF6B35;
  font-weight: bold;
  display: block;
}

/* ========== 底部操作栏 ========== */
.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: #ffffff;
  padding: 20rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.06);
  z-index: 100;
}

.bar-left {
  display: flex;
  gap: 24rpx;
}

.btn-icon-action {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: transparent;
  border: none;
  padding: 0;
  font-size: 22rpx;
  color: #666;
}

.action-icon {
  font-size: 36rpx;
  margin-bottom: 4rpx;
}

.action-text {
  font-size: 20rpx;
}

.bar-right {
  flex: 1;
  margin-left: 32rpx;
}

.btn-primary-action {
  width: 100%;
  background: linear-gradient(135deg, #FF6B35 0%, #F7931E 100%);
  color: #ffffff;
  border: none;
  border-radius: 48rpx;
  padding: 24rpx;
  font-size: 30rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 53, 0.3);
}

.btn-disabled {
  width: 100%;
  background: #f5f5f5;
  color: #999;
  border: none;
  border-radius: 48rpx;
  padding: 24rpx;
  font-size: 30rpx;
}

.btn-completed {
  width: 100%;
  background: #f0f9ff;
  color: #0284c7;
  border: none;
  border-radius: 48rpx;
  padding: 24rpx;
  font-size: 30rpx;
}

/* ========== 加载状态 ========== */
.loading-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  min-height: 100vh;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #FF6B35;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 24rpx;
  font-size: 28rpx;
  color: #999;
}
