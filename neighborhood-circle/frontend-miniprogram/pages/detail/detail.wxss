.container {
  padding: 30rpx;
  background-color: #f6f6f6;
  min-height: 100vh;
}

.card {
  background: #fff;
  padding: 30rpx;
  border-radius: 12rpx;
  margin-bottom: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.price {
  font-size: 36rpx;
  color: #e64340;
  font-weight: bold;
  margin-bottom: 20rpx;
}

.meta {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: space-between;
}

.desc {
  font-size: 30rpx;
  color: #333;
  line-height: 1.6;
}

.creator {
  display: flex;
  align-items: center;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.btn-primary {
  background-color: #07c160;
  color: #fff;
  width: 100%;
}
