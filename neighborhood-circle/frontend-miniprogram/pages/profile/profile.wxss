.container {
  min-height: 100vh;
  background-color: #f6f6f6;
}

.user-header {
  background: #fff;
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 20rpx;
}

.avatar {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
  background-color: #eee;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
}

.btn-login {
  background-color: #07c160;
  color: #fff;
}

.menu-list {
  background: #fff;
}

.menu-item {
  padding: 30rpx 40rpx;
  border-bottom: 1rpx solid #eee;
  display: flex;
  justify-content: space-between;
  font-size: 30rpx;
}

.balance {
  font-weight: bold;
  color: #e64340;
}

.btn-logout {
  margin-top: 40rpx;
  background-color: #f6f6f6;
  color: #666;
}
